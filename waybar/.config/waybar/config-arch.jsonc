{
  "include": [
    "~/dotfiles/waybar/.config/waybar/config.jsonc"
  ],
  "modules-left": [
    "custom/launcher",
    "wlr/taskbar",
    "mpris"
  ],
  "modules-right": [
    "pulseaudio",
    "network",
    "bluetooth",
    "group/system",
    "clock",
    "custom/power"
  ],
  "custom/launcher": {
    "format": "󰣇",
    "tooltip": false,
    "on-click": "rofi -show drun -theme ~/.config/rofi/launcher-theme.rasi",
    "on-click-right": "killall rofi"
  },
  "mpris": {
    "format": "{player_icon}\n{status_icon}",
    "player-icons": {
      "default": "",
      "spotify": "󰓇"
    },
    "status-icons": {
      "playing": "▶",
      "paused": "󰏤"
    },
    "ignored-players": [
      "firefox"
    ]
  }
}
